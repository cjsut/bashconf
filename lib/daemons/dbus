# -*- shell-script -*-


dbus-start()
{
    if shopt -q login_shell \
	    && test ${SHLVL} -eq 1 \
	    && which "dbus-launch" > /dev/null 2>&1 \
	   && test -z "${DBUS_SESSION_BUS_ADDRESS}" ; then
	eval "$(dbus-launch --sh-syntax)"
	export DBUS_SESSION_BUS_ADDRESS
	export DBUS_SESSION_BUS_PID
    fi
}


dbus-cleanup()
{
    bashconf-cleanup dbus
}
